  thread step1
  features
    ined: in data port timedata;
    outed: out data port timedata;
  end step1;

  thread implementation step1.periodic
  calls
    Mycalls: {
    -- myspg : subprogram step1spg;
      myspg_in : subprogram step1spg_in;
      myspg_out : subprogram step1spg_out;
    };
  connections
    -- cn0: parameter ined -> myspg.ined;
    -- cn1: parameter myspg.outed -> outed;
    cn0: parameter ined -> myspg_in.ined;
    cn1: parameter myspg_out.outed -> outed;
  properties
    Dispatch_Protocol => Periodic;
    period => 500 ms;
    deadline => 450 ms;
    Compute_Execution_Time => 60 ms .. 100 ms;
    Priority => 5;
  end step1.periodic;

